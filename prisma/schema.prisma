generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  stripeId  String?
  isPremium Boolean  @default(false)
  createdAt DateTime @default(now())
}
model GenerationHistory {
  id        String   @id @default(uuid())
  userId    String
  feature   String   // e.g., "article-generator"
  input     Json
  output    Json
  createdAt DateTime @default(now())
}
